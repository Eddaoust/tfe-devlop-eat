{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}Entreprise Générale{% endblock %}

{% block dash_body %}
    <div class="col-xl-10">
        <div class="jumbotron mt-5">
            <h1 class="display-6">Gestion des entreprises générales</h1>
            <p class="lead">Vous avez <strong class="text-success">{{ genCompaniesCounter.getGenCompaniesCount() }}</strong> entreprises générales enregistrés sur la plateforme.</p>
            <hr class="my-4">

            <a class="btn btn-success btn-lg" href="{{ path('genCompany_add') }}" role="button"><i class="fas fa-user-plus"></i> Ajouter une entreprise générale</a>
        </div>
        {% block genCompany_body %}{% endblock %}
    </div>
{% endblock %}
