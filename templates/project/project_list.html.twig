{% extends 'project/project-template.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css"/>
{% endblock %}

{% block project_body %}
    <table id="table_id" class="table table-hover table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Project Owner</th>
            <th scope="col">Adresse</th>
            <th scope="col">Ville</th>
            <th scope="col">Création</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <th>{{ loop.index }}</th>
                <th><a href="{{ path('project_one', {id: project.id}) }}">{{ project.name }}</a></th>
                <th>{{ project.projectOwner.name }}</th>
                <th>{{ project.address }}</th>
                <th>{{ project.city }}</th>
                <th>{{ project.created | date('d/m/Y') }}</th>
                <th class="text-center"><a href="{{ path('project_update', {id: project.id}) }}"><i class="fas fa-pen"></i></a></th>
                <th class="text-center"><a href="{{ path('project_delete', {id: project.id}) }}"><i class="fas fa-trash-alt"></i></a></th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script>
        $(function () {
            $('#table_id').DataTable({
                'language': {
                    "lengthMenu": "Afficher _MENU_ projets par page",
                    "search": "Recherche: ",
                    "info": "Affichage de _START_ à _END_ sur un total de _TOTAL_ projets",
                    "paginate": {
                        "first":      "Première",
                        "last":       "Dernière",
                        "next":       "Suivant",
                        "previous":   "Précédent"
                    }
                }
            })
        })
    </script>
{% endblock %}