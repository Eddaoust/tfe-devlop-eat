{% extends 'project/project-template.html.twig' %}

{% block project_body %}
    <div class="container">
        <h3>Ajouter un projet</h3>
        <hr class="mb-5">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">{{ form_row(form.name) }}</div>
            <div class="col-6">{{ form_row(form.projectOwner) }}</div>
        </div>
        <div class="row">
            <div class="col-6">{{ form_row(form.architect) }}</div>
            <div class="col-6">{{ form_row(form.generalCompany) }}</div>
        </div>
        <br>
        <hr>
        <br>
        <div class="row">
            <div class="col-4">{{ form_row(form.address) }}</div>
            <div class="col-4">{{ form_row(form.postalCode) }}</div>
            <div class="col-4">{{ form_row(form.city) }}</div>
        </div>
        <div class="row">
            <div class="col-4">{{ form_row(form.fieldSize) }}</div>
            <div class="col-4">{{ form_row(form.turnover) }}</div>
            <div class="col-4">{{ form_row(form.lots) }}</div>
        </div>
        <br>
        <hr>
        <br>
        <div class="row">
            <div class="col-12">{{ form_row(form.description) }}</div>
        </div>
        <div class="row">
            <div class="col-12">{{ form_row(form.pointOfInterest) }}</div>
        </div>
        <br>
        <hr>
        <br>
        <div class="row">
            <div class="col-4">
                <div class="row">
                    <div class="img-wrapper" style="height: 250px; overflow: hidden;">
                        <img src="{{ project.img1 ? asset('img/project/' ~ project.name ~ '/' ~ project.img1.fileName) : asset('img/project/default.png') }}"
                             class="img-fluid">
                    </div>
                </div>
                {% if project.img1 %}
                    <div class="row"><a href="{{ path('project_image_delete', {id: project.id, img: 'img1'}) }}"
                                        class="btn btn-danger">Supprimer l'image</a></div>
                {% endif %}
                <div class="row">{{ form_row(form.img1) }}</div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="img-wrapper" style="height: 250px; overflow: hidden;">
                        <img src="{{ project.img2 ? asset('img/project/' ~ project.name ~ '/' ~ project.img2.fileName) : asset('img/project/default.png') }}"
                             class="img-fluid">
                    </div>
                </div>
                {% if project.img2 %}
                    <div class="row"><a href="{{ path('project_image_delete', {id: project.id, img: 'img2'}) }}"
                                        class="btn btn-danger">Supprimer l'image</a></div>
                {% endif %}
                <div class="row">{{ form_row(form.img2) }}</div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="img-wrapper" style="height: 250px; overflow: hidden;">
                        <img src="{{ project.img3 ? asset('img/project/' ~ project.name ~ '/' ~ project.img3.fileName) : asset('img/project/default.png') }}"
                             class="img-fluid">
                    </div>
                </div>
                {% if project.img3 %}
                    <div class="row"><a href="{{ path('project_image_delete', {id: project.id, img: 'img3'}) }}"
                                        class="btn btn-danger">Supprimer l'image</a></div>
                {% endif %}
                <div class="row">{{ form_row(form.img3) }}</div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}