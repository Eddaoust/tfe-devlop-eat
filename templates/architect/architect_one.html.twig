{% extends 'architect/architect-template.html.twig' %}

{% block architect_body %}
    <div class="container">
        <div class="row mb-5">
            <div class="col-6"><h2>{{ architect.name }}</h2></div>
            <div class="col-6"><h3>{{ architect.email }}</h3></div>
        </div>
        <hr class="mb-5">
        {% if architect.address %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Siège social: </h6></div>
                <div class="col-9"><h6>{{ architect.address }}, {{ architect.postalCode }} {{ architect.city }}</h6></div>
            </div>
        {% endif %}
        {% if architect.phone %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Téléphone: </h6></div>
                <div class="col-9"><h6>{{ architect.phone }}</h6></div>
            </div>
        {% endif %}
    </div>
{% endblock %}