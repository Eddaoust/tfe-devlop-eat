{% extends 'company/company-template.html.twig' %}

{% block company_body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col-10"><h2>{{ company.name }} <strong>{{ company.companyCategory.abbreviation }}</strong></h2></div>
            <div class="col-2"><h3>{{ company.country.name }}</h3></div>
        </div>
        <hr>
        {% if company.address %}
            <div class="row mt-3">
                <div class="col-3"><h6 class="text-success">Siège social: </h6></div>
                <div class="col-9"><h6>{{ company.address }}, {{ company.postalCode }} {{ company.city }}</h6></div>
            </div>
        {% endif %}
        {% if company.phone %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Téléphone: </h6></div>
                <div class="col-9"><h6>{{ company.phone }}</h6></div>
            </div>
        {% endif %}
        {% if company.tvaNum %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">TVA: </h6></div>
                <div class="col-9"><h6>{{ company.tvaNum }}</h6></div>
            </div>
        {% endif %}
        {% if company.registrationNum %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Numéro d'enregistrement: </h6></div>
                <div class="col-9"><h6>{{ company.registrationNum }}</h6></div>
            </div>
        {% endif %}
        <hr class="mt-3 mb-3">
        {% if company.bank %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Banque: </h6></div>
                <div class="col-9"><h6>{{ company.bank }}</h6></div>
            </div>
        {% endif %}
        {% if company.bankAccount %}
            <div class="row">
                <div class="col-3"><h6 class="text-success">Compte banquaire: </h6></div>
                <div class="col-9"><h6>{{ company.bankAccount }}</h6></div>
            </div>
        {% endif %}
        <hr class="mt-3 mb-3">
        {% if company.shareholders %}
            <h3 class="text-success mb-3">Actionnaires: </h3>
            {% for shareholder in company.shareholders %}
                <div class="row">
                    <div class="col-4"><h6>{{ shareholder.shareholder.name }}: </h6></div>
                    <div class="col-8"><h6>{{ shareholder.part }}%</h6></div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}