{% extends 'company/company-template.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css"/>
{% endblock %}

{% block company_body %}
    <table id="table_id" class="table table-hover table-bordered">
        <thead>
        <tr>
            <th class="desktop">#</th>
            <th class="desktop">Nom</th>
            <th class="desktop">Type</th>
            <th class="desktop">Pays</th>
            <th class="desktop">Addresse</th>
            <th class="desktop">Ville</th>
            <th class="desktop">Numero TVA</th>
            <th class="desktop">Banque</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th class="desktop">Modifier</th>
                <th class="desktop">Supprimer</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <th>{{ loop.index }}</th>
                <th><a href="{{ path('company_one', {id: company.id}) }}">{{ company.name }}</a></th>
                <th>{{ company.companyCategory.abbreviation }}</th>
                <th>{{ company.country.code }}</th>
                <th>{{ company.address }}</th>
                <th>{{ company.city }}</th>
                <th>{{ company.tvaNum }}</th>
                <th>{{ company.bank }}</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th class="text-center"><a href="{{ path('company_update', {id: company.id}) }}"><i class="fas fa-pen"></i></a></th>
                <th class="text-center">
                    <span data-toggle="modal" data-target="#company-{{ company.id }}">
                        <a href="#" class="item-delete" id="{{ company.id }}" data-toggle="tooltip">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </span>
                </th>
                </tr>

                <!-- Modal -->
                <div class="modal fade" id="company-{{ company.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Suppression de la société {{ company.name }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Valider la suppression de la société {{ company.name }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                <a class="btn btn-danger" href="{{ path('company_delete', {id: company.id}) }}">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block js %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/company-tooltip.js') }}"></script>
{% endblock %}